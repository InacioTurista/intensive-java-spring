package com.inacioturist.firstproject.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.inacioturist.firstproject.entities.Department;
import com.inacioturist.firstproject.entities.Product;

@RestController
@RequestMapping(value = "/products")
public class ProductController {
	
	@GetMapping
	public Department getObjects() {
		Department d1 = new Department(1L, "Tech");
		//	This became obsolete since I created a constructor method to this function
		// d1.setId(1L);
		// d1.setName("Tech");
		Department d2 = new Department(2L, "Pet");
		
		Product p1 = new Product(1L, "Macbook Pro", 4000.0, d1);
		Product p2 = new Product(2L, "PC Gamer", 5000.0, d1);
		Product p3 = new Product(2L, "Pet House", 300.0, d2);
		
		return d1;
	}
}
